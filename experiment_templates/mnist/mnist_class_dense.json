{
    "globals": {
        "project": "MNIST classifier",
        "author": "Marc",
        "parent": "mnist_parent.json",
        "set_random_seed": 33
    },
    "models": {
        "simpleNet": {
            "path": "/home/marc/dev/fonduecaquelon/src/networks/simpleNet.py",
            "args": {
                "nb_in_channels": 1,
                "nb_out_channels": 10,
                "input_shape": [
                    28,
                    28
                ]
            },
            "optimizer": {
                "module": "torch.optim.Adam",
                "args": {
                    "lr": 0.001
                }
            },
            "lr_scheduler": {
                "module": "torch.optim.lr_scheduler.StepLR",
                "args": {
                    "step_size": 2,
                    "gamma": 0.95
                }
            }
        }
    },
    "train": {
        "path": "~/dev/fonduecaquelon/experiment_templates/mnist/train.py",
        "args": {
            "epochs": 4,
            "use_GPU": false,
            "use_AMP": false,
            "accumulate_grad_batches": 1,
            "early_stop_val_loss": 5,
            "early_stop_train_loss": 5,
            "early_stop_nan": 5
        }
    },
    "losses": {
        "cp": {
            "module": "torch.nn.CrossEntropyLoss",
            "args": {
                "reduction": "mean"
            }
        }
    }
}